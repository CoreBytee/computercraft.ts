{
	"$schema": "https://raw.githubusercontent.com/MCJack123/TypeScriptToLua/master/tsconfig-schema.json",
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"moduleResolution": "node",
		"strict": false,

		"types": [
			"@corebyte/cc-types-base",
			"@corebyte/cc-types-globals",
			"@corebyte/cc-types-modules",
			"@corebyte/cc-types-create"
		]
	},

	"include": ["./playground/**/*.ts"],

	"exclude": [
		"node_modules",
		"./node_modules",
		"./node_modules/*",
		"./node_modules/@types/bun/index.d.ts"
	],

	"tstl": {
		"buildMode": "default",
		"luaTarget": "CC-5.2",
		"luaLibImport": "require",
		"luaBundle": "./playground/startup.lua",
		"luaBundleEntry": "./playground/index.ts"
	}
}
